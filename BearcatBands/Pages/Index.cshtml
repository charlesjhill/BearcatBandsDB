@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="jumbotron">
    <h1>Bearcat Bands</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Welcome to the Band website</h2>
        <p>
            This is a sample application which
